
% Father predicate
father(X, Y) :- parent(X, Y), male(X).

% Mother predicate
mother(X, Y) :- parent(X, Y), female(X).

% Sister predicate
sister(X, Y) :- parent(Z, X), parent(Z, Y), female(X), female(Y), X \= Y.

% Brother predicate
brother(X, Y) :- parent(Z, X), parent(Z, Y), male(X), male(Y), X \= Y.

% Grandchild predicate
grandchild(X, Y) :- parent(X, Z), parent(Z, Y).

% Grandfather predicate
grandfather(X, Y) :- parent(X, Z), parent(Z, Y), male(X).

% Uncle predicate
uncle(X, Y) :- parent(Z, Y), brother(X, Z), male(X).

% Male predicate
male(john).
male(peter).
male(bill).
male(harry).

% Female predicate
female(mary).
female(sue).
female(alice).
female(jane).

% Parent predicate
parent(john, mary).
parent(john, peter).
parent(mary, sue).
parent(mary, alice).
parent(peter, bill).
parent(jane, harry).

% Example queries
?- father(john, X).

?- grandchild(X, Y).

?- uncle(bill, Sue).

?- mother(marry, X).
